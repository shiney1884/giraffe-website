<%- include('header') -%>

<div class="order-details">
    <h4>Your Order</h4>
    <div class="order-items">
        <div class="order-item">
            <div class="item-details">
            <img src="images/winner-1.jpg" alt="">
                <div class="item-name"><span>Item: </span>Pencil 1</div>
                <div class="item-price"><span>Price: </span>£5.00</div>
                <div class="item-quantity"><span>Quantity: </span>5</div>
            </div>
            <hr>
        </div>
    </div>
</div>
<div class="delivery-address">
    <h4>Your Delivery Address</h4>
    <div class="delivery-address-details">
        <div class="delivery-address-detail">
            <label for="">Country</label>
            <select name="" id="">
                <option value="">United Kingdom</option>
                <option value="">United States</option>
            </select>
        </div>
        <div class="delivery-address-detail">
            <label for="">Full Name</label>
            <input type="text">
        </div>
        <div class="delivery-address-detail">
            <label for="">Phone Number</label>
            <input type="tel" name="" id="">
        </div>
        <div class="delivery-address-detail">
            <label for="">Postcode</label>
            <input type="text">
        </div>
         <div class="delivery-address-detail">
            <label for="">Address Line 1</label>
            <input type="text">
        </div>
         <div class="delivery-address-detail">
            <label for="">Address Line 2 (optional)</label>
            <input type="text">
        </div>
         <div class="delivery-address-detail">
            <label for="">Town/City</label>
            <input type="text">
        </div>
         <div class="delivery-address-detail">
            <label for="">County</label>
            <input type="text">
        </div>
         <div class="delivery-address-detail">
            <label for="">Any Delivery Instructions?</label>
            <textarea name="" id="" cols="30" rows="10"></textarea>
        </div>
    </div>
</div>
<div class="payment-method">
    <h4>Payment Method</h4>
</div>
<div class="final-cost">
    <h4>Your Total Order Price</h4>
    <p>£<span>25.00</span></p>
</div>
<div class="complete-order">
    <button>Complete Order</button>
</div>

<%- include('footer') -%>

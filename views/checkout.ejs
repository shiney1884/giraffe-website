<%- include('header') -%>

<div class="page-content">
    <div class="order-details">
        <h4>Your Order</h4>
        <div class="order-items">
            <%    for(let i = 0; i < data.length; i++) { %> <div class="order-item">
                <div class="item-details">
                    <img src="images/<%= data[i]['imageSrc'] %>" alt="">
                    <div class="item-name"><span>Item: </span><%= data[i]['name'] %></div>
                    <div class="item-price"><span>Price: </span><%= data[i]['price'] %></div>
                    <div class="item-quantity"><span>Quantity: </span><%= data[i]['quantity'] %></div>
                </div>
                <hr>
            </div>
            <%    } %>

        </div>
    </div>
    <div class="delivery-address">
        <h4>Your Delivery Address</h4>
        <div class="delivery-address-details">
            <div class="delivery-address-detail">
                <label for="">Country</label>
                <select name="" id="">
                    <option value="">United Kingdom</option>
                    <option value="">United States</option>
                </select>
            </div>
            <div class="delivery-address-detail">
                <label for="">Full Name</label>
                <input type="text">
            </div>
            <div class="delivery-address-detail">
                <label for="">Phone Number</label>
                <input type="tel" name="" id="">
            </div>
            <div class="delivery-address-detail">
                <label for="">Postcode</label>
                <input type="text">
            </div>
            <div class="delivery-address-detail">
                <label for="">Address Line 1</label>
                <input type="text">
            </div>
            <div class="delivery-address-detail">
                <label for="">Address Line 2 (optional)</label>
                <input type="text">
            </div>
            <div class="delivery-address-detail">
                <label for="">Town/City</label>
                <input type="text">
            </div>
            <div class="delivery-address-detail">
                <label for="">County</label>
                <input type="text">
            </div>
            <div class="delivery-address-detail">
                <label for="">Any Delivery Instructions?</label>
                <textarea name="" id="" cols="30" rows="10"></textarea>
            </div>
        </div>
    </div>
    <form action="/checkout" method="post">
        <div class="payment-method">
            <h4>Payment Method</h4>
        </div>
        <div class="final-cost">
            <h4>Your Total Order Price</h4>
            <input type="hidden" name='date' value="<%= date %>">
            <input type="hidden" name='total' value="<%= total %>">
            <p>Â£<%= total %></p>
        </div>
        <button class="complete-order" type="submit">
            Complete Order
        </button>
    </form>
</div>

<%- include('footer') -%>
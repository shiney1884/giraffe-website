<%- include('header'); -%>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAGfnhgaNrJANhOvLakBVY246YnfSWAj2U&callback=initMap&libraries=&v=weekly" async></script>

<div class="page-content">
    <div class="contact-hero hero">
        <h4 class="product-header white"><%= header %></h4>
    </div>
    <div class="form-and-details">
        <div class="details">
            <div class="contact-details">
                <h4>How to Contact Us!</h4>
                <div class="number">
                    <i class="fas fa-phone"></i>
                    <p> Lorem ipsum</p>
                </div>
                <div class="email">
                    <i class="fas fa-envelope"></i>
                    <p> Nunc sagittis</p>
                </div>
                <div class="address">
                    <i class="fas fa-map-marker-alt"></i>
                    <p> Etiam volutpat erat sodales, scelerisque.</p>
                </div>
                <div class="form-method">
                    <i class="fas fa-info-circle"></i>
                    <p> Contact us Below on Mobile or Left on Desktop!</p>
                </div>
            </div>
            <div id="map"></div>
        </div>
        <form class="form" action="/contact" method="post">
            <h4>Get in Touch!</h4>
            <label for="email">Email</label>
            <input type="email" name="email" id="email">
            <label for="details">Details</label>
            <textarea name="details" id="details" cols="30" rows="10"></textarea>
            <button type="submit">Submit</button>
        </form>
    </div>
    <div class="social-media-sec">
        <h6>Follow Us!</h6>
        <div class="social-media">
            <i class="fab fa-facebook-square"></i>
            <i class="fab fa-twitter-square"></i>
            <i class="fab fa-instagram-square"></i>
        </div>
    </div>
</div>
<script src="scripts/map.js"></script>

<%- include('footer'); -%>
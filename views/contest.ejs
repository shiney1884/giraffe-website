<%- include('header'); -%>

<div class="page-content">
    <div class="artcontest-hero hero">
        <h4 class="product-header white"><%= header %></h4>
    </div>
    <div class="artcontest-guide">
        <div class="title">
            <h4>How To Be Part Of Our Art Contest!</h4>
        </div>
        <div class="steps">
            <div class="step">
                <div class="circle">1</div>
                <h6>How to Enter?</h6>
                <p>To enter our contest, all you have to do is submit your submission to us at
                    giraffecontests@giraffe.com. </p>
            </div>
            <div class="step">
                <div class="circle">2</div>
                <h6>How to Submit?</h6>
                <p class="center">Submit your submission to us <a class="submit-entry-btn"
                        href="mailto:giraffecontests@giraffe.com">here! </a>
                </p>
            </div>
            <div class="step">
                <div class="circle">3</div>
                <h6>Did You Win?</h6>
                <p>We will respond to every entry with feedback and to let you know where we ranked your submission.
                    This reponse will go to the email where your submission came from. </p>
            </div>
        </div>
    </div>
    <div class="gallery">
        <div class="title">
            <h4>Gallery Of Previous Winners</h4>
        </div>
        <div class="winners">
            <% for(let i = 0; i < winners.length; i++) { %>
            <div class="winner">
                <img src="images/<%= winners[i]['img'] %>" alt="">
                <div class="winner-info">
                    <div class="name">
                        <%= winners[i]['winnername'] %>
                    </div>
                    <div class="description">
                        <%= winners[i]['contestdescription'] %>
                    </div>
                </div>
            </div>
            <%    } %>


        </div>
        <div class="social-media-sec">
            <h6>Follow Us!</h6>
            <div class="social-media">
                <i class="fab fa-facebook-square"></i>
                <i class="fab fa-twitter-square"></i>
                <i class="fab fa-instagram-square"></i>
            </div>
        </div>
    </div>

</div>

<%- include('footer'); -%>
<%- include('header') -%>

<div class="page-content">
    <form action="/actions" method="post">
        <div class="product-page-product">
            <div class="product-page-img">
                <img src="images/<%= data[0]['imageSrc'] %>" alt="">
            </div>
            <div class="product-page-details">
                <input type="hidden" name='id' value='<%= data[0]["id"] %>'>
                <div class="product-page-title"><%= data[0]['name'] %></div>
                <input type="hidden" name='price'
                    value="<%= (Math.round(data[0]['price'] * 0.9 * 100) / 100).toFixed(2) %>">
                <div class="product-page-price">Â£<%= (Math.round(data[0]['price'] * 0.9 * 100) / 100).toFixed(2) %>
                </div>
                <hr>
                <div class="product-page-actions">
                    <%  if(wishlistItems.includes(data[0]['id'])) { %>
                    <button class="wishlist-delete" type="submit" name="type" value="delete_from_wishlist">
                        <i class="fas fa-heart-broken"></i>
                    </button>
                    <%   } else {%>
                    <button class="wishlist-add" type="submit" name="type" value="add_to_wishlist">
                        <i class="far fa-heart"></i>
                    </button>
                    <%   }%>
                    <%   if(basketItems.includes(data[0]['id'])) { %>
                    <button class="delete-all-from-basket" type="submit" name="type" value="delete_all_from_basket">
                        <i class="fas fa-trash"></i>
                    </button>
                    <%   } else { %>
                    <button class="basket-add-btn" type="submit" name="type" value="add_to_basket">
                        Add to Basket
                    </button>
                    <%    } %>
                </div>

                <hr>
                <div class="product-description-title">PRODUCT DESCRIPTION</div>
                <div class="product-page-description"><%= data[0]['description'] %></div>
            </div>
        </div>
    </form>
</div>
<script src="scripts/app.js"></script>

<%- include('footer') -%>
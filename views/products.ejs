<%- include('header'); -%>

<div class="page-content">
    <div class="product-hero hero">
        <h4 class="product-header"><%= header %></h4>
    </div>
    <div class="filter">
        <button>Filters</button>
        <div class="filter-options">
            <button>Option 1</button>
            <button>Option 2</button>
            <button>Option 2</button>
            <button>Option 2</button>
            <button>Option 2</button>
        </div>
    </div>
    <div class="products">
       <% for(let i = 0; i < data.length; i++) { %>
           <div class="product">
            <img class="product-img" src="images/pencil-1.jpg" alt="">
            <a href="#"><%= data[i]['description'] %></a>
            <div class="product-info">
                <div class="price">
                    <span>£</span><%= data[i]['price'] %>
                    <div class="old-price"><span>£</span><%= data[i]['supp_id'] %></div>
                </div>
                <div class="actions">
                    <i class="far fa-heart"></i>
                    <i class="fas fa-cart-plus"></i>
                </div>
            </div>
        </div>
        <% } %>
    </div>

            
</div>


<%- include('footer'); -%>